<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/favorite_row_selector"
    >

    <TextView
        android:id="@+id/favorite_stop_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Kearny Hall"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_weight="2"
android:textColor="#494949"
        android:gravity="center"
android:background="@drawable/favorite_name_border"
android:layout_marginTop="3dp"
        />

    <LinearLayout
        android:id="@+id/favorite_times_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/favorite_times_border"
        android:layout_marginTop="3dp">

    </LinearLayout>


</LinearLayout>