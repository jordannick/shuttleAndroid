<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

    <TextView
        android:id="@+id/info_shuttle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555"
        android:text="South Central"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingRight="75dp"
        android:paddingLeft="75dp"
        />

    <TextView
        android:id="@+id/info_shuttle_next_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Stops:"
        android:textSize="9sp"
        android:padding="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="16dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jefferson Peavy"
                android:textColor="#464646"
                android:paddingBottom="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30th Campus Way"
                android:textColor="#747474"
                android:paddingBottom="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monroe 14th"
                android:textColor="#A2A2A2"
                android:paddingBottom="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/info_shuttle_time1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="#464646"
                    android:paddingBottom="4dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="8dp"
                    android:layout_weight="0.3"
                    android:textColor="#464646"/>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/info_shuttle_time2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="8"
                    android:gravity="center"
                    android:textColor="#747474"
                    android:paddingBottom="4dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="8dp"
                    android:layout_weight="0.3"
                    android:textColor="#747474"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/info_shuttle_time3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="12"
                    android:gravity="center"
                    android:textColor="#A2A2A2"
                    android:paddingBottom="4dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="8dp"
                    android:layout_weight="0.3"
                    android:textColor="#A2A2A2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>