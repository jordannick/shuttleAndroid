<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/border"
        >

        <TextView
            android:id="@+id/info_shuttle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/OSU_black"
            android:text="South Central"
            android:textSize="20sp"
            android:textColor="#f5f2ed"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:text="Jefferson Peavy"
                android:textSize="20dp"

                android:textColor="@color/infowindow_font"
                android:layout_gravity="center_vertical"
                />

            <RelativeLayout
                android:id="@+id/time1_layout"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                >

                <TextView
                    android:id="@+id/min1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="12dp"
                    android:textColor="@color/infowindow_font"
                    android:paddingLeft="4dp"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/info_shuttle_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="@color/OSU_orange"
                    android:layout_toLeftOf="@id/min1"
                    />

                />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:text="Washington Ave. &amp; 15th"
                android:textSize="20dp"
                android:textColor="@color/infowindow_font"
                android:layout_gravity="center_vertical"
                />

            <RelativeLayout
                android:id="@+id/time2_layout"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                >

                <TextView
                    android:id="@+id/min2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="12dp"
                    android:textColor="@color/infowindow_font"
                    android:paddingLeft="4dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/info_shuttle_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="@color/OSU_orange"
                    android:layout_toLeftOf="@id/min2"

                    />

                />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:text="Monroe &amp; 14th"
                android:textSize="20dp"
                android:textColor="@color/infowindow_font"
                android:layout_gravity="center_vertical"
                />

            <RelativeLayout
                android:id="@+id/time3_layout"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                >

                <TextView
                    android:id="@+id/min3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textSize="12dp"
                    android:textColor="@color/infowindow_font"
                    android:paddingLeft="4dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/info_shuttle_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="@color/OSU_orange"
                    android:layout_toLeftOf="@id/min3"

                    />

                />

            </RelativeLayout>


            </GridLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/infowindow_bottom"
                />

        </LinearLayout>


</LinearLayout>